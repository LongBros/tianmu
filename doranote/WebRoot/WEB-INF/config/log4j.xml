<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="[Doranote] %-d{yyyy-MM-dd HH:mm:ss} %p [%t] %c{1}.%M(%L) | %m%n" />
		</layout>
	</appender>
	<appender name="APPLOGFILE" class="org.apache.log4j.RollingFileAppender">
		<param name="encoding" value="UTF-8" />
		<param name="File" value="${webapp.root}/WEB-INF/logs/dora.log" />
		<param name="Append" value="true" />
		<param name="MaxFileSize" value="3000KB" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="[Doranote] %-d{yyyy-MM-dd HH:mm:ss} %-5p %-15c{1}: %m%n" />
		</layout>
	</appender>

	<logger name="java.sql.Connection">
		<level value="ERROR" />
	</logger>
	<logger name="java.sql.Statement">
		<level value="ERROR" />
	</logger>
	<logger name="java.sql.PreparedStatement">
		<level value="ERROR" />
	</logger>
	<logger name="org.springframework.jdbc">
		<level value="ERROR" />
	</logger>
	<logger name="java.sql.ResultSet">
		<level value="ERROR" />
	</logger>

	<logger name="java.sql">
		<level value="ERROR" />
	</logger>

	<logger name="org.apache.ibatis">
		<level value="ERROR" />
	</logger>

	<logger name="org.apache.ibatis.type.BaseTypeHandler">
		<level value="WRAN" />
	</logger>

	<!-- Suppress success logging from InteractiveAuthenticationSuccessEvent -->
	<logger name="org.springframework.security">
		<level value="ERROR" />
	</logger>

	<logger name="org.apache">
		<level value="WARN" />
	</logger>

	<logger name="com.redxun.core.web.servlet.SpringMvcServlet">
		<level value="ERROR" />
	</logger>

	<logger name="org.springframework.security">
		<level value="ERROR" />
	</logger>

	<logger name="org.springframework">
		<level value="WARN" />
	</logger>
	<logger name="com.mitom.core.web.filter">
		<level value="WARN" />
	</logger>
	<logger name="org.displaytag">
		<level value="ERROR" />
	</logger>
	<logger name="com.longbro.doranote">
		<level value="DEBUG" />
	</logger>

	<logger name="org.activiti">
		<level value="ERROR" />
	</logger>

	<logger name="org.springframework.transaction">
		<level value="ERROR" />
	</logger>

	<logger name="org.apache.catalina">
		<level value="WARN" />
	</logger>


